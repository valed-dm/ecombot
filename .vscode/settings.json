{
    // Python & Poetry
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.poetryPath": "poetry",

    // Terminal - Auto-activate Poetry environment
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.env.osx": {
        "POETRY_VENV_IN_PROJECT": "true"
    },
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.automationProfile.osx": {
        "path": "/bin/zsh"
    },

    // Cursor AI settings
    "cursor.autopilot.enabled": true,
    "cursor.autopilot.context": "project",

    // Editor settings
    "workbench.editor.enablePreview": false,
    "editor.fontFamily": "'Cascadia Code', 'Fira Code', monospace",
    "editor.fontSize": 13,
    "editor.lineHeight": 1.5,

    // Extensions (Cursor has many built-in)
    "extensions.autoUpdate": true,

    "files.exclude": {
        // Python cache folders
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.hypothesis": true,
        "**/.coverage": true,
        "**/.tox": true,
        "**/.eggs": true,
        "**/*.egg-info": true,
        "**/.venv": true,
        "**/venv": true,
        "**/env": true,
        "**/.env": true,
    
        // Python cache files
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.pyd": true,
        "**/*.so": true,
    
        // IDE/Editor folders
        "**/.vscode": false,  // Keep .vscode folder visible
        "**/.idea": true,
    
        // OS files
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
  
  // Also exclude from search results
  "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/node_modules": true,
        "**/.git": true
    },
}
